alias kdbe-lp="knife data bag --secret-file=~/.chef/encrypted_data_bag_secret edit"
alias kdbs-lp="knife data bag --secret-file=~/.chef/encrypted_data_bag_secret show -F json"
alias kdbc-lp="knife data bag --secret-file=~/.chef/encrypted_data_bag_secret create"
alias kdbe-ts="knife data bag --secret-file=~/.chef/encrypted_data_bag_secret_ts edit"
alias kdbs-ts="knife data bag --secret-file=~/.chef/encrypted_data_bag_secret_ts show -F json"
alias kdbc-ts="knife data bag --secret-file=~/.chef/encrypted_data_bag_secret_ts create"

# Knife cookbooks aliases
alias kcl="knife cookbook list"
alias kcs="knife cookbook show"
alias kcd="knife cookbook download"
alias kcu="knife cookbook upload"

# Knife roles aliases
alias krl="knife role list"
alias krs="knife role show"
alias kre="knife role edit"

fpath=(~/.zsh/completion $fpath)
autoload -Uz compinit && compinit -i

