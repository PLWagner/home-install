export HOME=/Users/pwagner
export CLICOLOR=1
export EDITOR="/usr/bin/vim"
export TERM="xterm-256color"
export LC_ALL=en_US.UTF-8

# Go stuff
export GOPATH="~/src/go"

# PATH
#
export PATH="$PATH:$HOME/.rvm/bin:$GOPATH/bin:/usr/local/go/bin:$HOME/bin"

# thefuck
eval $(thefuck --alias shit)

# ZSH stuff
#
export ZSH=~/.oh-my-zsh
ZSH_THEME="mh"
DISABLE_LS_COLORS="false"

# Uncomment the following line to enable command auto-correction.
# ENABLE_CORRECTION="true"

# Uncomment the following line to display red dots whilst waiting for completion.
# COMPLETION_WAITING_DOTS="true"

# Uncomment the following line if you want to change the command execution time
# stamp shown in the history command output.
# The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
HIST_STAMPS="dd/mm/yyyy"

source ~/.oh-my-zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

plugins=(git docker vagrant chef knife kubectl)

krun() {
      kubectl get nodes | awk 'NR<2{next}{print $1}' | xargs -t -I % ssh % $1
}

# SSH stuff
#
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='mvim'
fi

#################
# Aliases stuff #
#################

# ls aliases
alias ls="ls -l"

# RVM alaises
#
alias rgu="rvm gemset use"

# Kubectl alaises
#
alias kk="kubectl"
alias kkuc="kubectl config use-context"
alias kkgc="kubectl config get-contexts"

# Knife aliases
#
alias kb="knife block"

# Knife nodes aliases
alias knl="knife node list"
alias kns="knife node show"
